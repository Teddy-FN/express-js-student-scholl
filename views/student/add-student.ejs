<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <form 
          action="<% if (!edit) { %>/student/add-student<% } else {%>/student/edit-student/<%= student.id %><% } %>"
          method="POST"
        >
        <div>
          <label for="name">Name</label>
          <input type="text" name="name" id="name" value="<% if (edit) { %><%= student.name %><% } %>" />
        </div>
        <div>
          <label for="nim">Nim</label>
          <input type="number" name="nim" id="nim" value="<% if (edit) { %><%= student.nim %><% } %>" />
        </div>
        <div>
          <label for="address">Address</label>
          <input type="text" name="address" id="address" value="<% if (edit) { %><%= student.address %><% } %>" />
        </div>
        <% if (edit) { %>
          <input type="hidden" name="id" id="id" value="<% if (edit) { %><%= student.id %><% } %>" />
        <% } %>
        <div>
          <button type="submit"><% if (!edit) { %>Add Users<% } else {%>Edit Users<% } %></button>
        </div>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
