<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <div>
        <%- include('../includes/add.ejs', {
          addNewTitle: addNewTitle
        }) %>
      </div>
      <h1>Teacher List :</h1>

      <% if (teacher) { %>
        <ul>
          <% teacher.forEach((user) => { %>
             <li> 
                <p>Name: <%= user.name %></p>
                <p>Nim:<%= user.nim %></p>
                <p>Address:<%= user.address %></p>
                <form action="/teacher/detail-teacher/<%= user.id %>" method="POST">
                    <button type="submit">Details Teacher</button>
                </form>
                <form action="/teacher/delete-teacher" method="POST">
                  <input type="hidden" value="<%= user.id %>" name="id" id="id">
                  <button type="submit">Delete Teacher</button>
                </form>
             </li>
          <% }); %> 
         </ul>
      <% } %>
    </main>
<%- include('../includes/end.ejs') %>
